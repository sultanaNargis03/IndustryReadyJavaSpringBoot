package com.telusko.app.servive;

import java.util.List;

import com.telusko.app.model.Transaction;
import com.telusko.app.model.User;
import com.telusko.app.servive.impl.UserServiceInterface;

public class UserService implements UserServiceInterface
{
	TransactionService ts;
	
	@Override
	public boolean login( List<User> user, int id, String pwd) 
	{
		boolean bool=false;
		for(User u:user)
		{
			if(u.getId().equals(id))
			{
				bool=true;
				
				if(u.getPassword().equals(pwd))
				{
					System.out.println("valid credentials");
					creditPoints(u.getId());
				}
				else
				{
					bool=false;
					System.out.println("oops!!invalid credentials");
				}
					
			}
		}
		
		return bool;
		
	}

	@Override
	public void showCreditPoints(int id) 
	{
		System.out.println("Total credit points earned by user"+id);
	}

	@Override
	public void redemRewards() 
	{
			
	}
	
}
