package com.telusko.jdbc.main;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Scanner;

import com.telusko.jdbc.util.JdbcUtility;

public class LaunchMainBatch {

	public static void main(String[] args)
	{
		Connection connect=null;
		PreparedStatement stmt=null;
		ResultSet rs=null;
		Scanner sc=null;
		
		try
		{
			connect=JdbcUtility.getDBConnection();
			if(connect!=null)
			{
				String query="UPDATE studentdetail set name=? where id=?";
				stmt=connect.prepareStatement(query);
				
				if(stmt!=null)
				{
					System.out.println("welcome");
					sc=new Scanner(System.in);
					System.out.println("Please enter your id");
					Integer id=sc.nextInt();
					System.out.println("Please enter your name to be updates");
					String name=sc.next();
					stmt.setString(1, name);
					stmt.setInt(2, id);
				}
			}
			
		}
		catch()
		{
			
		}
		finaly
		{
			
		}

	}

}
