spring.application.name=SpringBootMultiDB

server.port=8444

##Datasource Configuration
db1.datasource.url=jdbc:mysql:///teluskodb
db1.datasource.username=root
db1.datasource.password=root

db2.datasource.url=jdbc:postgresql://localhost:5432/teluskodb
db2.datasource.username=root
db2.datasource.password=root

#JPA-Hibernate properties
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
