<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="LoggingToConsole" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern> %d - %c -{%M} [%p] - %m %n</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="LoggingToConsole"></AppenderRef>
		</Root>
	</Loggers>
</Configuration>