package com.learningapp.controller;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.learningapp.model.CourseModel;
import com.learningapp.model.Model;

@WebServlet("/course")
public class Course extends HttpServlet 
{
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException 
	{

		System.out.println("inside course");
		boolean submitButtonPressed = request.getParameter("submit") != null;
		CourseModel cmodel=new CourseModel();
		List<CourseModel> courses=cmodel.readCourse();
		 
	    request.setAttribute("courses", courses);
		RequestDispatcher rd=request.getRequestDispatcher("course.jsp");
		rd.forward(request, response);
		
		String id=request.getParameter("id");
		String cname=request.getParameter("courseName");
		String price=request.getParameter("price");
		String instructor=request.getParameter("instructor");
		
		cmodel.setId(Integer.parseInt(id));
		cmodel.setCourseName(cname);
		cmodel.setPrice(Double.parseDouble(price));
		cmodel.setInstructor(instructor);
		if(submitButtonPressed==true)
		{		
			response.sendRedirect("coursepurchased.jsp");
		}
		
	}

}
